extends layout

block content
  .page-header
    h1 Simple TodoList in Express

  if(todoList.length == 0)
    h1 Er staat nog niks op het lijstje
  else
    table.table.table-responsive.table-hover
      thead
        tr
          th Todo
          th Actie
      tbody
        each val, index in todoList
          tr
            td #{val}
            td
              a(class="btn btn-smr btn-success" href='/todolist?id=#{index}')
                span.glyphicon.glyphicon-ok
                | &nbsp;Done

  form(action='/todolist' method='post')
    .form-group
      input.form-control(type='text', name="todoitem", placeholder="Dingen om te onthouden")

    button.btn.btn-lg.btn-success(type='submit') Add Todo

