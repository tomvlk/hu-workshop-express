extends layout

block content
  .page-header
    h1 Simple TodoList in Express

  ul
    each val, index in todoList
      li
        a(class="btn btn-lg btn-success" href='/todolist?id=#{index}') #{val}
      
  form(action='/todolist' method='post')
    .form-group
      input.form-control(type='text', name="todoitem", placeholder="Dingen om te onthouden")

    button.btn.btn-lg.btn-success(type='submit') Todo
